{
  "name": "@2toad/profanity",
  "version": "1.3.1",
  "description": "A JavaScript profanity filter",
  "homepage": "https://github.com/2Toad/Profanity",
  "author": "2Toad",
  "license": "MIT",
  "engines": {
    "node": ">=10.23.0"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsc -w",
    "lint": "npx eslint src",
    "prettier": "npx prettier --write .",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "prepare": "npm run build",
    "build": "npm run lint && npm run test && tsc && cp src/words.txt dist",
    "deploy": "npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:2Toad/Profanity.git"
  },
  "keywords": [
    "profanity",
    "profane",
    "obscene",
    "obscenity",
    "obscenities",
    "cussing",
    "cursing",
    "swearing",
    "swearwords",
    "vulgar",
    "vulgarity",
    "bad words",
    "bad language",
    "dirty words"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "chai": "^4.3.6",
    "eslint": "^8.15.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "mocha": "^10.0.0",
    "prettier": "2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ]
  }
}
